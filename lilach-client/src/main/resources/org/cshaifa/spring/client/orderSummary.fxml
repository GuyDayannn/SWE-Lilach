<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1040.0" stylesheets="@stylesheets/shoppingcart.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cshaifa.spring.client.OrderSummaryController">
   <children>
      <HBox fx:id="titleHbox" prefHeight="50.0" prefWidth="1040.0" styleClass="titleHBox">
         <children>
            <ImageView fx:id="cartImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" translateX="10.0" translateY="5.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="titleText" text="Order Summary" translateX="20.0" translateY="10.0">
               <font>
                  <Font name="Trebuchet MS" size="24.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <ScrollPane hbarPolicy="NEVER" layoutY="50.0" prefHeight="542.0" prefWidth="1040.0">
         <content>
            <VBox fx:id="itemsVbox" prefHeight="542.0" prefWidth="1038.0" />
         </content>
      </ScrollPane>
      <VBox fx:id="summaryVbox" layoutY="190.0" prefHeight="515.0" prefWidth="1040.0" styleClass="summaryVbox" translateY="400.0" />
   </children>
</AnchorPane>
