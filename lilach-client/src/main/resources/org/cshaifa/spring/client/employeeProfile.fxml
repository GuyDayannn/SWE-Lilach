                        <Label fx:id="editResultLabel" layoutX="171.0" layoutY="276.0" prefHeight="17.0" prefWidth="235.0" />
                     </children>
                  </AnchorPane>
               </content>
            </TitledPane>
        </panes>
      </Accordion>
   </children>
